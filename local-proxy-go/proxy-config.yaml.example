# Proxy de sortie par défaut (proxy système d'entreprise)
default_upstream_proxy: "http://proxy.infra.dgfip:3128"

rules:
  # Règle OpenAI : réécriture vers Cloudflare Pages + token
  - match: "api.openai.com"
    rewrite_to: "https://reverse-proxy-light.pages.dev"
    token_env: "926T6mcu"          # prend le token depuis la variable d'env
    token_header: "x-proxy-token"     # optionnel (défaut: x-proxy-token)

  # Exemple : autre host réécrit mais SANS token
  # - match: "example.com"
  #   rewrite_to: "https://my-pages.pages.dev"

  # Exemple : host qui sort via un autre proxy upstream
  # - match: "download.example.com"
